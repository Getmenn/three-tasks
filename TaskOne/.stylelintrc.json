{
    "extends": "stylelint-config-standard-scss",
    "plugins": ["stylelint-order"],
    "rules": {
        "indentation": [4],
        "keyframes-name-pattern": null,
        "selector-class-pattern": [
            "^[a-z][a-zA-Z0-9]+$",
            {
              "message": "Expected custom property name to be lowerCamelCase"
            }
          ]
    }
}